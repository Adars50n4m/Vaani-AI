# AI Agent Configuration
# Copy this file to .env and add your API keys

# ============================================
# API KEYS
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_GEMINI_API_KEY=your_google_api_key_here
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash-latest

# ============================================
# PROVIDER SELECTION
# ============================================
# Options: openai, gemini, auto
# 'auto' will try OpenAI first, then fallback to Gemini

LLM_PROVIDER=auto          # Language Model provider (openai, gemini, auto)
STT_PROVIDER=auto          # Speech-to-Text provider  
TTS_PROVIDER=auto          # Text-to-Speech provider

# ============================================
# MODEL CONFIGURATION
# ============================================

# OpenAI Models
OPENAI_LLM_MODEL=gpt-4o-mini              # Options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
OPENAI_STT_MODEL=whisper-1                # Whisper model for transcription
OPENAI_TTS_MODEL=tts-1                    # Options: tts-1 (fast), tts-1-hd (quality)
OPENAI_TTS_VOICE=onyx                     # Options: alloy, echo, fable, onyx, nova, shimmer

# Gemini Models
GEMINI_LLM_MODEL=gemini-1.5-flash         # Options: gemini-1.5-flash, gemini-1.5-pro
GEMINI_STT_MODEL=gemini-1.5-flash         # Model for audio transcription
GEMINI_MODEL=gemini-1.5-flash             # Legacy compatibility

# ============================================
# AUDIO CONFIGURATION
# ============================================
SAMPLE_RATE=16000                         # Audio sample rate (Hz)
STT_CHUNK_SECONDS=3                       # Audio chunk duration for STT

# ============================================
# DEVICE CONFIGURATION
# ============================================
STT_DEVICE=cuda                           # Options: cuda, cpu
STT_COMPUTE_TYPE=float16                  # Options: float16, int8
STT_MODEL_NAME=large-v3                   # Whisper model for local STT

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGO_URI=your_mongodb_uri_here
MONGO_DB_NAME=vaani
